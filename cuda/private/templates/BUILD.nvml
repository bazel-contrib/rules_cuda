cc_import(
    name = "nvidia-ml_so",
    interface_library = "%{component_name}/%{libpath}/stubs/libnvidia-ml.so",
    system_provided = 1,
    target_compatible_with = ["@platforms//os:linux"],
)

cc_import(
    name = "nvml_lib",
    interface_library = any_or_first(
        "%{component_name}/%{libpath}/x64/nvml.lib",
        "%{component_name}/%{libpath}/nvml.lib",
    ),
    system_provided = 1,
    target_compatible_with = ["@platforms//os:windows"],
)

cc_library(
    name = "nvml",
    deps = [
        ":%{component_name}_headers",
    ] + if_linux([
        ":nvidia-ml_so",
    ]) + if_windows([
        ":nvml_lib",
    ]),
)
