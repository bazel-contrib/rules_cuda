module(name = "bzlmod_components")

bazel_dep(name = "rules_cc", version = "0.2.14")
bazel_dep(name = "rules_cuda", version = "0.0.0")
local_path_override(
    module_name = "rules_cuda",
    path = "../../..",
)

cuda = use_extension("@rules_cuda//cuda:extensions.bzl", "toolchain")
cuda.redist_json(
    name = "cuda_12_6_3",
    platforms = [
        "linux-x86_64",
        "windows-x86_64",
    ],
    version = "12.6.3",
)
cuda.redist_json(
    name = "cuda_11_7_0",
    platforms = [
        "linux-x86_64",
        "windows-x86_64",
    ],
    version = "11.7.0",
)
cuda.toolkit(name = "cuda")  # automatically populate attrs if redist_json is used
use_repo(cuda, "cuda")

bazel_dep(name = "rules_cuda_examples", version = "0.0.0")
local_path_override(
    module_name = "rules_cuda_examples",
    path = "../../../examples",
)
